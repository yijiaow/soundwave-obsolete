{
  "name": "soundwave",
  "version": "1.0.0",
  "description:": "A web application for live music enthusiasts to track concerts and festivals",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "bundle": "browserify -t babelify client/index.js -o server/bundle.js",
    "watch:client": "watchify -vd -t babelify client/index.js -o server/bundle.js",
    "watch:server": "nodemon server/index.js",
    "watch": "npm-run-all --parallel watch:*",
    "lint": "run-p lint:*",
    "lint:html": "htmlhint ./**/*.html",
    "lint:css": "stylelint ./**/*.css",
    "lint:js": "eslint ./**/*.js",
    "test": "npm run lint",
    "precommit": "npm test"
  },
  "nodemonConfig": {
    "ignore": [
      "server/bundle.js",
      "client/"
    ]
  },
  "author": "Yijiao Wang",
  "license": "ISC",
  "engines": {
    "node": "8.11.1"
  },
  "dependencies": {
    "@material-ui/core": "^1.2.0",
    "@material-ui/icons": "^1.1.0",
    "aws-sdk": "^2.250.1",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "request": "^2.85.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "htmlhint": "^0.9.13",
    "husky": "^0.14.3",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "stylelint": "^9.1.3",
    "stylelint-config-standard": "^18.2.0",
    "watchify": "^3.11.0"
  }
}
